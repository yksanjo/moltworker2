{
  "meta": {
    "name": "moltbot-opus",
    "version": "1.0.0",
    "description": "Moltbot powered by Anthropic Claude (Opus as primary)"
  },
  "models": {
    "providers": {
      "anthropic": {
        "apiKey": "${ANTHROPIC_API_KEY}",
        "api": "anthropic-messages",
        "models": [
          {
            "id": "claude-3-opus-20240229",
            "name": "Claude 3 Opus",
            "description": "Most powerful model for complex tasks",
            "contextWindow": 200000,
            "maxTokens": 4096
          },
          {
            "id": "claude-3-5-sonnet-20241022",
            "name": "Claude 3.5 Sonnet",
            "description": "Fast, capable, and cost-effective",
            "contextWindow": 200000,
            "maxTokens": 8192
          },
          {
            "id": "claude-3-haiku-20240307",
            "name": "Claude 3 Haiku",
            "description": "Fastest and most affordable model",
            "contextWindow": 200000,
            "maxTokens": 4096
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-3-opus-20240229",
        "fallbacks": ["anthropic/claude-3-5-sonnet-20241022", "anthropic/claude-3-haiku-20240307"]
      },
      "models": {
        "anthropic/claude-3-opus-20240229": {
          "alias": "Claude Opus",
          "costOptimized": false
        },
        "anthropic/claude-3-5-sonnet-20241022": {
          "alias": "Claude Sonnet",
          "costOptimized": true
        },
        "anthropic/claude-3-haiku-20240307": {
          "alias": "Claude Haiku",
          "costOptimized": true
        }
      },
      "workspace": "/root/clawd"
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local"
  }
}
