  "author": "@yksanjo (https://github.com/yksanjo)",
  "license": "MIT",
  "cloudflare": {
    "bindings": {
      "DEEPSEEK_API_KEY": {
        "description": "Your DeepSeek API key from https://platform.deepseek.com"
      },
      "KIMI_API_KEY": {
        "description": "Your Kimi/Moonshot AI API key from https://platform.moonshot.cn (required)"
      },
      "KIMI_BASE_URL": {
        "description": "Kimi API base URL (default: https://api.moonshot.cn/v1)"
      },
      "MOLTBOT_GATEWAY_TOKEN": {
        "description": "Token to protect gateway access. Random string, you can generate one with `openssl rand -base64 32`, for example."
      },
      "WHATSAPP_BUSINESS_TOKEN": {
        "description": "WhatsApp Business API token from Meta Developer Portal"
      },
      "WHATSAPP_PHONE_NUMBER_ID": {
        "description": "WhatsApp Business phone number ID"
      },
      "WHATSAPP_BUSINESS_ACCOUNT_ID": {
        "description": "WhatsApp Business account ID"
      },
      "WHATSAPP_WEBHOOK_TOKEN": {
        "description": "Webhook verification token for WhatsApp"
      }
    }
  }
